            a(href='https://www.linkedin.com/in/jonathan-herrera-52b22613b/', uk-icon='linkedin')#primaryColor

    .uk-navbar-container(uk-navbar='').uk-box-shadow-small.uk-box-shadow-large
      .uk-navbar-center
        ul.uk-navbar-nav
